{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Literate" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft.EntityFrameworkCore.Storage.IRelationalCommandBuilderFactory": "Warning" }
    },
    "WriteTo": [
      { "Name": "LiterateConsole" },
      {
        "Name": "File",
        "Args": { "path": "Logs\\log-{0}.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Sample"
    }
  },
  "Log": {
    "File": {
      "LogFolder": "Logs",
      "LogFile": "log-{0}.txt"
    }
  },
  "ServerConfig": {
    "Address": "127.0.0.1",
    "Port": 8081,
    "IsPrimary" :  true
  },

  "ServerGroup": {
    "ServerOneAddress": "127.0.0.1",
    "ServerOnePort": 8081,
    "ServerTwoAddress": "127.0.0.1",
    "ServerTwoPort":  8082
  },

  "Spread": {
    "Deamon": "192.168.43.191",
    "Port": 4803,
    "User": "server1",
    "GroupName": "Alcatraz_Group"
  },
  "Storage": {
    "StorageFolder": "Storage",
    "StorageFileNames" : "clientNames.txt",
    "StorageFile":  "data-{0}.txt"
  }
}
